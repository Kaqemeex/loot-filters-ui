{
    "name": "loot-filters-ui",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "webpack serve --mode development",
        "build": "webpack --mode production",
        "build-ui": "webpack --mode production",
        "build-core": "npm run build --workspace=packages/core",
        "build-all": "npm run build-core && npm run build-ui",
        "dev": "webpack serve --mode development",
        "type-check": "npm run type-check --workspaces",
        "test": "npm run test --workspaces",
        "lint": "npm run lint --workspaces",
        "prettier": "prettier --write \"packages/**/*.{ts,tsx}\"",
        "prettier:check": "prettier --check \"packages/**/*.{ts,tsx}\""
    },
    "devDependencies": {
        "css-loader": "^7.1.2",
        "html-webpack-plugin": "^5.6.3",
        "prettier": "^3.5.1",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.2",
        "typescript": "^4.9.5",
        "webpack": "^5.101.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "browser": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:react/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        }
    }
}
